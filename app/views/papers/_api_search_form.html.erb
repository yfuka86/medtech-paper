<div class='paper-search-form'>
  <div class='form-title'>登録したい論文を探す</div>
  <%= form_tag api_index_papers_path, method: :get do %>
    <p>
      <%= text_field_tag :term, params[:term], required: true, class: 'keyword-input', placeholder: 'キーワード (pubmed id も可)' %>
    </p>
    <p>
      <%= label_tag :mindate, '出版年月日' %>
      <%= date_field_tag :mindate, params[:mindate], class: 'mindate-input' %>
      から
      <%= date_field_tag :maxdate, params[:maxdate], class: 'maxdate-input' %>
      <%= submit_tag "検索する", name: nil, class: 'submit-btn flat-button-identity2', data: {disable_with: '検索中...'} %>
    </p>
  <% end %>
</div>