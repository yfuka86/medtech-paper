<div class='paper-list-detail'>
  <div class='paper-list-metainfo'>
    <% if paper_list.favorite? || paper_list.read? %>
      <div class='icon'>
        <% if paper_list.favorite? %>
          <i class="fa fa-star"></i>
        <% elsif paper_list.read? %>
          <i class="fa fa-bookmark"></i>
        <% end %>
      </div>
    <% end %>
    <div class='title'>
      <%= paper_list.title %>
    </div>
    <% if paper_list.general? %>
      <div class='created_at'>
        <%= paper_list.created_at.strftime('%Y/%m/%d %H:%M') %>作成
      </div>
      <div class='updated_at'>
        <%= paper_list.updated_at.strftime('%Y/%m/%d %H:%M') %>更新
      </div>
      <%= link_to '削除', paper_list_path(id: paper_list.id),
                                 method: :delete,
                                 class: 'destroy-btn flat-button-red',
                                 data: {confirm: '本当に削除してよろしいですか？'} %>
      <%= link_to '編集', edit_paper_list_path(id: paper_list.id), class: 'edit-btn flat-button-normal' %>
    <% end %>
  </div>
  <div class='papers'>
    <% paper_list.papers.each_with_index do |p, idx| %>
      <%= render 'papers/paper', paper: p, is_last: (idx + 1 == paper_list.papers.count), user: user, paper_list: paper_list %>
    <% end %>
    <% if paper_list.papers.count == 0 %>
      <p class='attention'>論文が登録されていません</p>
    <% end %>
  </div>
  <div class='paper-list-menu'>
    <%= link_to 'リストに論文を登録する', search_papers_path, class: 'paper-search-btn flat-button-identity2' %>
    <%= link_to 'リストを共有する', '', class: 'share-btn flat-button-normal' %>
  </div>
</div>