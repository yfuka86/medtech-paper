source 'https://rubygems.org'


# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.2.0'

gem 'mysql2'
gem 'pg'

# to authenticate
gem 'devise'
gem 'doorkeeper', '~> 1.3.0'

# go international
gem 'i18n'
gem "i18n-js"

# for monitoring
gem 'newrelic_rpm'
gem 'exception_notification'

# for assets
gem 'sass-rails', '~> 4.0.3'
gem 'coffee-rails', '~> 4.0.0'
gem 'uglifier', '>= 1.3.0'
gem 'font-awesome-sass', '~> 4.2.0'

gem 'jquery-rails'
gem 'momentjs-rails'
gem 'backbone-on-rails', '~> 1.1.1.0'
gem 'nested_form'
gem 'kaminari'

gem 'turbolinks'
gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0', group: :doc

group :deployment, :development, :test do
  gem 'rspec-rails', '~> 2.14.2'
  gem 'factory_girl_rails', '~> 4.4.1'

  # for DEBUG
  gem 'pry', '0.9.10'
  gem 'pry-doc'
  gem 'pry-rails'
  gem 'pry-nav'
  gem 'pry-remote'
  gem 'pry-byebug'
  gem 'spring'
  gem 'spring-commands-rspec'
  gem 'commands'
  gem 'guard'
  gem 'guard-resque'
  # エラー画面をわかりやすく整形してくれる
  gem 'better_errors'
  # better_errorsの画面上にirb/pry(PERL)を表示する
  gem 'binding_of_caller'
  gem 'http-dump'
end

gem 'rails_12factor', group: :production


